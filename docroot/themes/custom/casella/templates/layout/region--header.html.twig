{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}

{% include "/" ~ theme_path ~ "/templates/includes/search-panel.html.twig" %}

{% block largeNavReveal %}{% endblock %}

<!--NAVIGATION REGION-->
<div{{ attributes|without('id') }} id="generalNav">

  <!--Global Nav-->
  <div class="navGlobal-container">
    <div class="navGlobal-wrapper">

      <!--Bill Pay-->
      <div class="navGlobal-indCTABtn-Container billPay">
        <a href="{{ bill_pay }}" title="" class="navGlobal-indCTABtn">
          <div class="navGlobal-indCTABtn-iconWrapper"><img src="/{{ theme_path }}/i/misc/payBill-icon.png" alt=""></div>
          <div class="navGlobal-indCTABtn-txtWrapper">Online <span>Bill Pay</span></div>
        </a>
      </div>
      <!--END Bill Pay-->

      <!--Customer Care-->
      <div class="navGlobal-indCTABtn-Container customerCare">
        <a href="{{ customer_care }}" title="" class="navGlobal-indCTABtn">
          <div class="navGlobal-indCTABtn-iconWrapper"><img src="/{{ theme_path }}/i/misc/customerCare-icon.png" alt=""></div>
          <div class="navGlobal-indCTABtn-txtWrapper">Customer <span>Care</span></div>
        </a>
      </div>
      <!--END Customer Care-->

    </div>
  </div>
  <!--END Global Nav-->

  <div class="navContainer">
    <div class="navInnerContainer">

      <!--Header Logo Region-->
      <div class="headerLogo">
        {% if not is_front %}
          <a href="{{ base_url }}" title="home">
        {% endif %}
        {% embed '/' ~ theme_path ~ "/templates/includes/casella-logo.html.twig" %}{% endembed %}
        {% if not is_front %}
          </a>
        {% endif %}
      </div>

      <!--Mobile Btn Set-->
      <div class="mobileBtnWrapper">
        <a href="#menu" class="mainMenuToggle"></a>
      </div>
      <!--END Mobile Btn Set-->

      {{ content }}

    </div>
  </div>
</div>
<!--END NAVIGATION REGION-->
